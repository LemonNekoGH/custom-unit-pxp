{
  "name": "custom-unit-pxp-root",
  "private": true,
  "version": "0.0.20",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "eslint": "^9.34.0",
      "bun-types": "^1.3.1",
      "@antfu/eslint-config": "^5.2.1",
      "typescript": "^5",
      "postcss-value-parser": "^4.2.0"
    }
  },
  "scripts": {
    "build": "bun run -F='./packages/*' build",
    "publish:run": "bun run -F='./packages/*' publish:run",
    "publish:dry-run": "bun run -F='./packages/*' publish:dry-run",
    "bump": "npx bumpp --no-push -r",
    "lint": "bun run -F='./packages/*' lint",
    "lint:fix": "bun run -F='./packages/*' lint:fix",
    "typecheck": "bun run -F='./packages/*' typecheck"
  },
  "devDependencies": {
    "@stacksjs/gitlint": "^0.1.5",
    "bun-git-hooks": "^0.3.1",
    "lint-staged": "^16.2.6"
  },
  "git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "bun run lint && bun run typecheck && bun test"
  }
}
